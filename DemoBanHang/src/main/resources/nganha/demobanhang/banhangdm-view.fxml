<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="nganha.demobanhang.BanHangController"
            prefHeight="400.0" prefWidth="600.0">
    <TableView fx:id="tableSanPham">
        <columns>
            <TableColumn text="ID" fx:id="colID"/>
            <TableColumn text="Tên Sản Phẩm" fx:id="colTenSP"/>
            <TableColumn text="Giá" fx:id="colGiaSP"/>
            <TableColumn text="Mô Tả" fx:id="colMoTa"/>
        </columns>
    </TableView>

    <!-- Nút để thêm sản phẩm mới -->
    <Button text="Thêm Sản Phẩm" onAction="#handleAddProduct"/>

</AnchorPane>
