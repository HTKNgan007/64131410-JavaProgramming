<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="gridPane" alignment="CENTER" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23" fx:controller="org.example.carofx.HelloController">
    <!-- Các nút cho trò chơi caro -->
    <Button fx:id="btn1" onAction="#handleButtonAction" prefHeight="100" prefWidth="100" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <Button fx:id="btn2" onAction="#handleButtonAction" prefHeight="100" prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Button fx:id="btn3" onAction="#handleButtonAction" prefHeight="100" prefWidth="100" GridPane.columnIndex="2" GridPane.rowIndex="0" />

    <Button fx:id="btn4" onAction="#handleButtonAction" prefHeight="100" prefWidth="100" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <Button fx:id="btn5" onAction="#handleButtonAction" prefHeight="100" prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Button fx:id="btn6" onAction="#handleButtonAction" prefHeight="100" prefWidth="100" GridPane.columnIndex="2" GridPane.rowIndex="1" />

    <Button fx:id="btn7" onAction="#handleButtonAction" prefHeight="100" prefWidth="100" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Button fx:id="btn8" onAction="#handleButtonAction" prefHeight="100" prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Button fx:id="btn9" onAction="#handleButtonAction" prefHeight="100" prefWidth="100" GridPane.columnIndex="2" GridPane.rowIndex="2" />

    <!-- Label để hiển thị trạng thái -->
    <Label fx:id="statusLabel" alignment="CENTER" prefHeight="50" prefWidth="300" text="Player X's Turn" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="3" />

    <!-- Nút để reset trò chơi -->
    <Button fx:id="resetButton" onAction="#resetGame" prefHeight="50" prefWidth="321.0" text="Reset" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="4" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
