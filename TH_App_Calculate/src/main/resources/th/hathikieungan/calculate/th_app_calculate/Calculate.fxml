<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20" style="-fx-padding: 20; -fx-font-size: 14px;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="th.hathikieungan.calculate.th_app_calculate.CalController">
    <!-- Tiêu đề -->
    <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1E90FF;" text="Tính toán" textAlignment="CENTER" wrappingWidth="250" />

    <!-- Nhập A -->
    <HBox alignment="CENTER" spacing="10">
        <Text style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1E90FF;" text="Nhập A:" />
        <TextField fx:id="soA" promptText="Nhập số A" style="-fx-padding: 5px; -fx-font-size: 16px; -fx-border-color: #1E90FF;" />
    </HBox>

    <!-- Nhập B -->
    <HBox alignment="CENTER" spacing="10">
        <Text style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1E90FF;" text="Nhập B:" />
        <TextField fx:id="soB" promptText="Nhập số B" style="-fx-padding: 5px; -fx-font-size: 16px; -fx-border-color: #1E90FF;" />
    </HBox>

    <!-- Các lựa chọn phép toán -->
    <VBox alignment="CENTER_LEFT" spacing="15">
        <RadioButton fx:id="radioButtonAdd" style="-fx-font-size: 16px; -fx-text-fill: #1E90FF;" text="Cộng" />
        <RadioButton fx:id="radioButtonSubtract" style="-fx-font-size: 16px; -fx-text-fill: #1E90FF;" text="Trừ" />
        <RadioButton fx:id="radioButtonMultiply" style="-fx-font-size: 16px; -fx-text-fill: #1E90FF;" text="Nhân" />
        <RadioButton fx:id="radioButtonDivide" style="-fx-font-size: 16px; -fx-text-fill: #1E90FF;" text="Chia" />
    </VBox>

    <!-- Nút tính toán -->
    <Button fx:id="nutTinhToan" style="-fx-font-size: 16px; -fx-padding: 10px; -fx-background-color: #1E90FF; -fx-text-fill: white; -fx-border-radius: 5;" text="Tính toán" />

    <!-- Kết quả -->
    <Label fx:id="ketQua" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1E90FF;" text="Kết quả:" />
</VBox>
